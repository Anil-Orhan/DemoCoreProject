@model List<Demo.Core.Entities.Concrete.Categories>
<div class="container mt-3">
    <h1 style="color: royalblue">Categories Table</h1>
               
    <table class="table table-dark table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Category Name</th>
         
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.ToList())
        {

            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>

            </tr>

        }
       

        </tbody>
    </table>
    
    
    <h3 style="color: royalblue">Add Category</h3>
    <p>Please fill the form </p>
    
    <form action="/action_page.php" class="was-validated">
        <div class="mb-3 mt-3">
            <label for="uname" class="form-label">Category Name :</label>
            <input type="text" class="form-control" id="categoryname" placeholder="Enter username" name="uname" required>
            <div class="valid-feedback">Done!</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
    
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="myCheck"  name="remember" required>
            <label class="form-check-label" for="myCheck">I have checked the category name and I confirm its inclusion in the database</label>
            <div class="valid-feedback"></div>
            <div class="invalid-feedback">Check this checkbox to continue.</div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
    

